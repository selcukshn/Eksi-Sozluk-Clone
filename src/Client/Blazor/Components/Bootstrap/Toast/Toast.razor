@inherits BaseToast
<div class="toast-container position-fixed @(ToastPosition[Position]) py-10">
    <div class="toast align-items-center fade show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header d-flex justify-content-between align-items-center border-2 @(ToastColor[Color])">
            @ToastHeader
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            @ToastBody
        </div>
    </div>
</div>