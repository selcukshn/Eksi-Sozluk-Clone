<div class="entry">
    <div class="entry-header">
        <h1 class="entry-title h5 color-white900 fw-700">
            <a href="/@Url">@Subject</a>
        </h1>
        @if (IsPage)
        {
            <div class="d-flex justify-content-between mb-4">
                <div class="d-flex align-items-center gap-1 fs-08 color-white900">
                    <span class="me-1">şükela:</span>
                    <a href="#">tümü</a>
                    <div class="svl-50 bg-white500"></div>
                    <a href="#">son 24 saat</a>
                </div>
                <div class="d-flex align-items-center gap-1 color-white700">
                    <select class="form-select form-select-sm fs-08 focus-disable">
                        @for (int i = 0; i < 10; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                    /
                    <button class="btn btn-sm border py-1 px-2 fs-08">1</button>
                    <button class="btn btn-sm border py-1 px-2 fs-08">
                        <i class="bi bi-chevron-double-right"></i>
                    </button>
                </div>
            </div>
        }
    </div>
    <EntryComment Content="@Content" Username="@Username" CreatedDate="@CreatedDate" />
</div>

@code {
    [Parameter] public string Subject { get; set; }
    [Parameter] public string Url { get; set; }
    [Parameter] public string Content { get; set; }
    [Parameter] public string Username { get; set; }
    [Parameter] public DateTime CreatedDate { get; set; }
    [Parameter] public bool IsPage { get; set; }
}
